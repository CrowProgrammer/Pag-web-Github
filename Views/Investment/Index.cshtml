@model WebII_Lab05_Paco_Ramos_Aaron_Pedro_Ejercicio.Models.InvestmentModel

@{
    ViewBag.Title = "Cálculo de Interés Compuesto";
}

<h2>Cálculo de Interés Compuesto</h2>

@using (Html.BeginForm("Calculate", "Investment", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.CapitalInicial, "Capital Inicial")
        @Html.EditorFor(m => m.CapitalInicial, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.TasaInteres, "Tasa de Interés Anual (%)")
        @Html.EditorFor(m => m.TasaInteres, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NumeroAnios, "Número de Años")
        @Html.EditorFor(m => m.NumeroAnios, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Frecuencia, "Frecuencia de Capitalización")
        @Html.DropDownListFor(m => m.Frecuencia, new SelectList(new List<string> { "Mensual", "Trimestral", "Anual" }), "Seleccione una opción", new { @class = "form-control" })
    </div>

    <input type="submit" value="Calcular" class="btn btn-primary" />
}
